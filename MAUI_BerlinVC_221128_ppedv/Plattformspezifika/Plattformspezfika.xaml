<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_BerlinVC_221128_ppedv.Plattformspezifika.Plattformspezfika"
             Title="Plattformspezfika">
    <VerticalStackLayout>
        <Label 
            Text="{OnPlatform Android=ANDROID, WinUI=WINDOWS, Default=DEFAULT}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            BackgroundColor="{OnIdiom Desktop=Blue, Phone=Green, Default=Red}"/>

        <Label x:Name="Lbl_DeviceInfo"/>

        <Label x:Name="Lbl_Orientation"/>
    </VerticalStackLayout>
</ContentPage>