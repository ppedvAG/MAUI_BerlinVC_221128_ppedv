<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="MAUI_BerlinVC_221128_ppedv.Resources_Styles"
             Title="Resources_Styles">
    
    <ContentPage.Resources>
        <x:String x:Key="RessourcenString">Ich bin eine Ressource</x:String>
        <Color x:Key="Yellow200Accent">Red</Color>

        <Style TargetType="Label" x:Key="Sty_Lbl_Main">
            <Setter Property="TextColor" Value="Orange"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource Sty_Lbl_Main}">
            <Setter Property="BackgroundColor" Value="{StaticResource Yellow200Accent}"/>
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout Margin="20">
        <Button Text="{StaticResource RessourcenString}"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="{StaticResource Yellow200Accent}"
                FontSize="{x:Static sys:Math.PI}"/>

        <Label Text="Hallo" Style="{StaticResource Sty_Lbl_Main}"/>
        <Label Text="Moin" TextColor="Purple"/>
    </VerticalStackLayout>
</ContentPage>